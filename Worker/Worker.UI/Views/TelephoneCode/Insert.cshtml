@model Worker.UI.Models.TelephoneCodeCRUDModel

@{
    ViewBag.Title = "Insert";
}

<h2>Telefon Kodu Ekleme Alanı</h2>

@using (Html.BeginForm("Insert", "TelephoneCode", FormMethod.Post))
{
    <div class="form-group">

        <div class="form-group">
            @Html.TextBoxFor(s => s.TelCode, new { @class = "form-control", required = "", placeholder = "Telefon Kodunu Giriniz..." })
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Kod Ekle" id="tel" />
        </div>

        <script src="~/Scripts/jquery-1.10.2.js"></script>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

        <script>
            $('#tel').click(function () { alert('Telefon Kodu Eklendi...'); });
        </script>
    </div>
}

