@model Worker.UI.Models.TelephoneCodeCRUDModel

@{
    ViewBag.Title = "Update";
}

<h2>Telefon Kodu Güncelleme Alanı</h2>

@using (Html.BeginForm("Update", "TelephoneCode", FormMethod.Post))
{
<div class="form-group">

    @Html.HiddenFor(s => s.TelephoneCodeId)

    <div class="form-group">
        @Html.TextBoxFor(s => s.TelCode, new { @classs = "form-control", required = "", placeholder = "Telefon Kodu Giriniz..." });
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Güncelle" id="tel" />
    </div>

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <script>
            $('#tel').click(function () { alert('Telefon Kodu Güncellendi...'); });
    </script>
</div>
}

