@model Worker.UI.Models.PersonCRUDModel

@{
    ViewBag.Title = "Update";
}

<h2>Personel Güncelleme</h2>

@using (Html.BeginForm("Update", "Home", FormMethod.Post))
{
    @Html.HiddenFor(s => s.WorkerId)

    <div class="form-group">
        <div class="form-group">
            @Html.TextBoxFor(s => s.Name, new { @class = "form-control", required = "", placeholder = "Adınız Girin" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(s => s.Surname, new { @class = "form-control", required = "", placeholder = "Soyadınızı Girin" })
        </div>

        <div class="form-group">
            @Html.DropDownListFor(s => s.CityId, Model.CityList, "Şehir Seçiniz", new { @class = "form-control", required = "" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(s => s.Address, new { @class = "form-ontrol", required = "", placeholder = "Adresinizi Giriniz..." })
        </div>

        <div class="form-group">
            @Html.DropDownListFor(s => s.BloodId, Model.BloodList, "Kan Grubu Seçiniz", new { @class = "form-control", required = "" })
        </div>

        <div class="form-group">
            @Html.DropDownListFor(s => s.DrivingId, Model.DrivingList, "Ehliyet Seçiniz", new { @class = "form-control", required = "" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(s => s.Email, new { @class = "form-control", placeholder = "Email", required = "" })
        </div>

        <div class="form-group">
            @Html.DropDownListFor(s => s.TelephoneCodeId, Model.TelList, "Telefon Kodu", new { @class = "form-control", required = "" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(s => s.Telephone, new { @class = "form-control", required = "", plaeholder = "Telefon" })
        </div>

        <div class="form-group">
            @Html.DropDownListFor(s => s.HobbyId, Model.HobbyList, "Hobiler", new { @class = "form-control", required = "" })
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Güncelle" id="person" />
        </div>

        <script src="~/Scripts/jquery-1.10.2.js"></script>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

        <script>
            $('#person').click(function () { alert('Çalışan Güncellendi...'); });
        </script>
    </div>
}


