@model Worker.UI.Models.CityCRUDModel

@{
    ViewBag.Title = "Insert";
}

<h2>Şehir Ekle</h2>

@using (Html.BeginForm("Insert", "City", FormMethod.Post))
{
    <div class="form-group">

        <div class="form-group">
            @Html.TextBoxFor(s=>s.CityName,new { @class="form-control",required="",placeholder="Şehir Giriniz..."})
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Ekle" id="city" />
        </div>

        <script src="~/Scripts/jquery-1.10.2.js"></script>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

        <script>
            $('#city').click(function () { alert('Şehir Eklendi...'); });
        </script>
    </div>
}

