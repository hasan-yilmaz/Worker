@model Worker.UI.Models.HobbyCRUDModel

@{
    ViewBag.Title = "Insert";
}

<h2>Hobi Ekleme Alanı</h2>

@using (Html.BeginForm("Insert", "Hobby", FormMethod.Post))
{
    <div class="form-group">

        <div class="form-group">
            @Html.TextBoxFor(s=>s.HobbyName,new { @class="form-ontrol",required="",placeholder="Hobi Giriniz..."})
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Ekle" id="hobby" />
        </div>

        <script src="~/Scripts/jquery-1.10.2.js"></script>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

        <script>
            $('#hobby').click(function () { alert('Hobi Eklendi...'); });
        </script>
    </div>
}

