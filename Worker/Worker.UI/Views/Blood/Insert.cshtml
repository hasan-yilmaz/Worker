@model Worker.UI.Models.BloodCRUDModel
@{
    ViewBag.Title = "Insert";
}

<h2>Kan Grubu Ekleme Alanı</h2>

@using (Html.BeginForm("Insert", "Blood", FormMethod.Post))
{
    <div class="form-group">

        <div class="form-group">
            @Html.TextBoxFor(s=>s.BloodGroup,new { @class="form-control",required="",placeholder="Kan Grubu Giriniz"})
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Kaydet" id="blood" />
        </div>

        <script src="~/Scripts/jquery-1.10.2.js"></script>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        
        <script> $('#blood').click(function () { alert('Kan Grubu Eklendi...'); });</script>
    
    </div>
}