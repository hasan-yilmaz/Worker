@model Worker.UI.Models.BloodCRUDModel

@{
    ViewBag.Title = "Update";
}

<h2>Kan Grubu Güncelle</h2>

@using (Html.BeginForm("Update", "Blood", FormMethod.Post))
{
<div class="form-group">

    @Html.HiddenFor(s => s.BloodId)

    <div class="form-group">
        @Html.TextBoxFor(s => s.BloodGroup, new { @class = "form-control", required = "" })
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Güncelle" id="blood" />
    </div>


    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <script>
        $('#blood').click(function () { alert('Kan Grubu Güncellendi...'); });
    </script>
</div>
}
